import BaseLayout from '../layouts/BaseLayout.astro';
// Button not used here to match code.html exactly, we use raw button with classes
---

<BaseLayout>
  <!-- Using exact structure from code.html -->
  <section class="space-y-8">
    <div class="flex items-center gap-3">
      <div class="w-10 h-10 rounded-full bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark flex items-center justify-center">
        <span class="material-symbols-outlined text-primary text-xl">all_inclusive</span>
      </div>
      <div>
        <h1 class="font-semibold text-lg">Sarkome Institute</h1>
        <p class="text-sm text-text-muted-light dark:text-text-muted-dark">Generative Biotechnology</p>
      </div>
    </div>
    <div class="space-y-6">
      <h2 class="text-4xl md:text-5xl font-bold tracking-tight leading-[1.1]">
        The Industrialization of <span class="text-primary">Causal Discovery</span>
      </h2>
      <p class="text-lg text-text-muted-light dark:text-text-muted-dark leading-relaxed max-w-xl">
        Sarkome is a generative biotechnology institute based in Cambridge, MA. We specialize in leveraging neuro-symbolic AI to decode biological complexity and accelerate cures for rare diseases.
      </p>
      <div class="pt-2">
        <button class="inline-flex items-center gap-2 bg-text-main-light dark:bg-white text-white dark:text-black px-5 py-2.5 rounded-full text-sm font-medium hover:bg-primary dark:hover:bg-primary dark:hover:text-white transition-all group">
          <span class="mono-text">[ REQUEST ACCESS ]</span>
          <span class="material-symbols-outlined text-sm group-hover:translate-x-0.5 transition-transform">arrow_forward</span>
        </button>
        <span class="ml-4 text-xs text-text-muted-light dark:text-text-muted-dark">Press <kbd class="font-mono bg-surface-light dark:bg-surface-dark px-1 py-0.5 rounded border border-border-light dark:border-border-dark">R</kbd> for research papers</span>
      </div>
    </div>
    <div class="relative py-12 md:py-16">
      <p class="text-xs font-bold tracking-widest text-text-muted-light dark:text-text-muted-dark uppercase mb-8">Platform Visualization</p>
      <div class="relative h-[300px] md:h-[400px] w-full perspective-[1000px]">
        <!-- Main Card -->
        <div class="absolute inset-x-0 top-0 md:left-10 md:right-10 mx-auto z-20 bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark rounded-xl shadow-2xl overflow-hidden p-4 transform transition-all hover:scale-[1.02] duration-500">
          <div class="flex items-center justify-between mb-4 border-b border-border-light dark:border-border-dark pb-3">
            <div class="flex gap-1.5">
              <div class="w-2.5 h-2.5 rounded-full bg-red-400"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-yellow-400"></div>
              <div class="w-2.5 h-2.5 rounded-full bg-green-400"></div>
            </div>
            <div class="text-[10px] font-mono text-text-muted-light dark:text-text-muted-dark">causal_inference_engine_v4.py</div>
          </div>
          <div class="relative h-[200px] md:h-[280px] bg-black rounded-lg overflow-hidden flex items-center justify-center">
            <img alt="Abstract Data Visualization" class="absolute inset-0 w-full h-full object-cover opacity-80 mix-blend-screen" src="https://lh3.googleusercontent.com/aida-public/AB6AXuDTu0_VpIa_addIxGdTpsucwH6Q83MTH8RS60p-EV4FyTg1BasX_a-IozLR5yNXBU5cAZqNlbSFGFFvs4jvddCDRvfdFmHtS76ZipuSrXg532wHWW6BbuaUyissY6pbHc4Myau1g2eIyhr40TuZtADOJSoBHoqPe_OHtMx2_A0E7RjsCZS3Ah25YSXU4kmX1_hdeSPhwfkkgr7MkB-dkQxmFll7BzIJ4g9hrj9RwPo33LfkBWMjZtyxuPHt4mywlha_qlMtEpke4jCJ"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
            <div class="absolute bottom-4 left-4 right-4 flex justify-between items-end">
              <div class="bg-white/10 backdrop-blur-md p-3 rounded border border-white/20">
                <div class="text-[10px] text-white/60 mb-1">Confidence Score</div>
                <div class="text-xl font-bold text-white">98.4%</div>
              </div>
              <div class="flex gap-2">
                <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-white">
                  <span class="material-symbols-outlined text-sm">hub</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Left Decorative Card -->
        <div class="hidden md:block absolute top-12 -left-12 w-2/3 h-[300px] z-10 transform -rotate-6 scale-90 origin-bottom-right">
          <div class="floating-card-delay h-full w-full bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark rounded-xl shadow-xl p-4 opacity-40 blur-[1px] transition-all">
            <div class="h-full w-full bg-slate-100 dark:bg-slate-900 rounded border border-dashed border-border-light dark:border-border-dark flex flex-col p-4">
              <div class="h-2 w-1/3 bg-slate-300 dark:bg-slate-700 rounded mb-4"></div>
              <div class="h-2 w-2/3 bg-slate-200 dark:bg-slate-800 rounded mb-2"></div>
              <div class="h-2 w-1/2 bg-slate-200 dark:bg-slate-800 rounded mb-2"></div>
              <div class="mt-auto grid grid-cols-2 gap-2">
                <div class="h-16 bg-slate-200 dark:bg-slate-800 rounded"></div>
                <div class="h-16 bg-slate-200 dark:bg-slate-800 rounded"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Decorative Card -->
        <div class="hidden md:block absolute top-24 -right-12 w-2/3 h-[280px] z-10 transform rotate-3 scale-95 origin-bottom-left">
          <div class="floating-card h-full w-full bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark rounded-xl shadow-xl p-4 opacity-40 blur-[1px] transition-all">
            <div class="h-full w-full bg-black rounded overflow-hidden relative">
              <img alt="Gradient Texture" class="w-full h-full object-cover opacity-60" src="https://lh3.googleusercontent.com/aida-public/AB6AXuCvDgJ4_q465Dz4iqJsvyGzeugCfeRsZngNxI5FPVs9gWqq25cS70TshBDYbyU9eLxxjuzXfIK0OZAJAGKQukLR3cUwE2NOQU-9htsh_RveC3PjoMAMPlOeqxGL9Txi4Tl0liQH_EJICvjegk5sqF-vL_VqpGLYil3gj9aZ2VWcWAgmA5mcpKJyLiiSeLBDs-CVV_eY2Xzf4ZpjO3Y4PTG3eQHLygrx-O92m31zrOH4Bs669YPUgp3QdXsg4ncFQ6MytiDsU32-XTXW"/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <h3 class="text-xs font-bold tracking-widest text-text-muted-light dark:text-text-muted-dark uppercase mb-8">Discovery Pipeline</h3>
    <p class="mb-10 text-text-muted-light dark:text-text-muted-dark text-sm leading-relaxed">
      Our approach integrates high-throughput wet lab data with causal representation learning to build the first comprehensive map of disease etiology.
    </p>
    <div class="space-y-8 relative pl-2">
      <div class="absolute left-[3px] top-2 bottom-2 w-[1px] bg-border-light dark:border-border-dark"></div>
      
      <div class="relative pl-8 group">
        <div class="absolute left-0 top-1.5 w-1.5 h-1.5 rounded-full bg-border-light dark:border-border-dark group-hover:bg-primary transition-colors"></div>
        <div class="grid md:grid-cols-[1fr_3fr] gap-2 md:gap-8">
          <div class="text-xs font-mono text-text-muted-light dark:text-text-muted-dark pt-0.5">PHASE 01 — DATA</div>
          <div>
            <h4 class="font-medium text-text-main-light dark:text-text-main-dark mb-1 group-hover:text-primary transition-colors">Multi-omics Ingestion</h4>
            <p class="text-sm text-text-muted-light dark:text-text-muted-dark">Aggregating genomic, transcriptomic, and proteomic datasets from diverse patient cohorts to establish a ground truth baseline.</p>
          </div>
        </div>
      </div>

      <div class="relative pl-8 group">
        <div class="absolute left-0 top-1.5 w-1.5 h-1.5 rounded-full bg-border-light dark:border-border-dark group-hover:bg-primary transition-colors"></div>
        <div class="grid md:grid-cols-[1fr_3fr] gap-2 md:gap-8">
          <div class="text-xs font-mono text-text-muted-light dark:text-text-muted-dark pt-0.5">PHASE 02 — MODEL</div>
          <div>
            <h4 class="font-medium text-text-main-light dark:text-text-main-dark mb-1 group-hover:text-primary transition-colors">Causal Graph Learning</h4>
            <p class="text-sm text-text-muted-light dark:text-text-muted-dark">Applying neuro-symbolic architectures to infer causal relationships between genes, proteins, and phenotypic outcomes, going beyond mere correlation.</p>
          </div>
        </div>
      </div>

       <div class="relative pl-8 group">
        <div class="absolute left-0 top-1.5 w-1.5 h-1.5 rounded-full bg-border-light dark:border-border-dark group-hover:bg-primary transition-colors"></div>
        <div class="grid md:grid-cols-[1fr_3fr] gap-2 md:gap-8">
          <div class="text-xs font-mono text-text-muted-light dark:text-text-muted-dark pt-0.5">PHASE 03 — VALIDATE</div>
          <div>
            <h4 class="font-medium text-text-main-light dark:text-text-main-dark mb-1 group-hover:text-primary transition-colors">In Silico Perturbation</h4>
            <p class="text-sm text-text-muted-light dark:text-text-muted-dark">Simulating billions of therapeutic interventions digitally to identify high-probability candidates before wet lab synthesis.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <h3 class="text-xs font-bold tracking-widest text-text-muted-light dark:text-text-muted-dark uppercase mb-8">Advisory Board</h3>
    <div class="grid md:grid-cols-2 gap-6">
      <div class="bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark p-6 rounded-2xl hover:border-primary/50 dark:hover:border-primary/50 transition-colors cursor-default">
        <p class="text-sm leading-relaxed mb-6 text-text-main-light dark:text-text-main-dark">
