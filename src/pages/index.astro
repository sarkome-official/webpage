---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Silk, ReadmeTerminal, SocialDock } from '../components';
---

<BaseLayout>
  <div class="fixed inset-0">
    <div class="absolute inset-0 -z-30 bg-gradient-to-br from-purple-700 via-purple-900 to-black" aria-hidden="true"></div>
    <div class="absolute inset-0 -z-20">
      <Silk client:idle speed={5} scale={1} color="#6B46C1" noiseIntensity={1.5} rotation={0} />
    </div>
  </div>
  <div class="fixed inset-0 flex items-center justify-center px-6 overflow-hidden z-0">
    <div class="w-full max-w-4xl text-center z-10">
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        ASPS Therapeutics Discovery Initiative
      </h1>
      <p class="text-lg md:text-xl text-white max-w-2xl mx-auto leading-relaxed mb-8">
        Advances new therapeutic targets and drug candidates for Alveolar Soft Part Sarcoma through integrated computational and experimental research.
      </p>
      
      <ReadmeTerminal client:load />
    </div>
  </div>

      <SocialDock />

  <script type="application/ld+json">
  {
    "page": "Home",
    "disease": "Alveolar Soft Part Sarcoma",
    "driver": "ASPSCR1â€“TFE3 fusion",
