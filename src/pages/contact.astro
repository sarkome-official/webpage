---
import BaseLayout from '../layouts/BaseLayout.astro';
import { BackgroundShapes } from '../components';
import { Icon } from 'astro-icon/components';
---

<BaseLayout title="Contact - Sarkome.com" description="Get in touch with the Sarkome.com team.">
  <BackgroundShapes />
  <div class="relative z-10 text-slate-800 dark:text-slate-200 font-sans">
    
    <!-- Header Section -->
    <header class="relative pt-6 pb-16 w-full">
        <div class="max-w-[90%] mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-4xl md:text-6xl font-extrabold text-slate-900 dark:text-white tracking-tight mb-6 leading-tight">
                Join the <br class="hidden md:block"/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-ref-primary to-indigo-600 dark:from-purple-400 dark:to-indigo-400">
                    Discovery Initiative
                </span>
            </h1>
            <p class="max-w-2xl mx-auto text-lg md:text-xl text-slate-600 dark:text-slate-400 leading-relaxed">
                Whether you're a researcher, patient, or partner, we'd love to hear from you.
            </p>
        </div>
    </header>

    <main class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 pb-24">
      
      <div class="bg-ref-surface-light dark:bg-ref-surface-dark rounded-2xl p-8 md:p-12 shadow-xl border border-slate-200 dark:border-slate-700 relative overflow-hidden">
        <!-- Decorative background element -->
        <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-ref-primary to-indigo-600"></div>

        <form class="space-y-8 relative z-10">
          <div class="grid md:grid-cols-2 gap-8">
            <div class="space-y-2">
              <label for="name" class="block text-sm font-bold text-slate-700 dark:text-slate-300 uppercase tracking-wide">Name</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <Icon name="mdi:account" class="h-5 w-5 text-slate-400" />
                </div>
                <input type="text" id="name" name="name" class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 focus:ring-2 focus:ring-ref-primary focus:border-transparent outline-none transition-all text-slate-900 dark:text-white placeholder-slate-400" placeholder="Your name" required />
              </div>
            </div>
            
            <div class="space-y-2">
              <label for="email" class="block text-sm font-bold text-slate-700 dark:text-slate-300 uppercase tracking-wide">Email</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <Icon name="mdi:email" class="h-5 w-5 text-slate-400" />
                </div>
                <input type="email" id="email" name="email" class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 focus:ring-2 focus:ring-ref-primary focus:border-transparent outline-none transition-all text-slate-900 dark:text-white placeholder-slate-400" placeholder="your@email.com" required />
              </div>
            </div>
          </div>
          
          <div class="space-y-2">
            <label for="message" class="block text-sm font-bold text-slate-700 dark:text-slate-300 uppercase tracking-wide">Message</label>
            <div class="relative">
                <div class="absolute top-3 left-3 pointer-events-none">
                  <Icon name="mdi:message-text" class="h-5 w-5 text-slate-400" />
                </div>
                <textarea id="message" name="message" rows="5" class="w-full pl-10 pr-4 py-3 rounded-xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 focus:ring-2 focus:ring-ref-primary focus:border-transparent outline-none transition-all text-slate-900 dark:text-white placeholder-slate-400 resize-none" placeholder="How can we help?" required></textarea>
            </div>
          </div>
          
          <button type="submit" class="w-full py-4 px-6 rounded-xl bg-gradient-to-r from-ref-primary to-indigo-600 hover:from-ref-primary-dark hover:to-indigo-700 text-white font-bold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2">
            <Icon name="mdi:send" class="w-5 h-5" />
            Send Message
          </button>
        </form>
      </div>

      <div class="mt-12 text-center">
        <p class="text-slate-500 dark:text-slate-400 text-sm">
          Or email us directly at <a href="mailto:contact@sarkome.com" class="text-ref-primary hover:underline font-medium">contact@sarkome.com</a>
        </p>
      </div>

    </main>
  </div>
</BaseLayout>
