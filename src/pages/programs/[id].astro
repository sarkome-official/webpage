---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { diseases } from '../../data/diseases';

export function getStaticPaths() {
  return diseases.map(disease => ({
    params: { id: disease.id },
    props: { disease },
  }));
}

const { disease } = Astro.props;
---

<BaseLayout>
  <div class="max-w-4xl mx-auto space-y-12 py-12">
    <div>
      <a href="/" class="inline-flex items-center gap-2 text-sm text-text-muted-light dark:text-text-muted-dark hover:text-primary transition-colors mb-8">
        <span class="material-symbols-outlined text-lg">arrow_back</span>
        Back to Pipeline
      </a>
      
      <div class="flex items-center gap-4 mb-4">
        <span class={`px-3 py-1 rounded-full text-xs font-mono border ${disease.type === 'active' ? 'bg-primary/10 border-primary text-primary' : 'bg-surface-light dark:bg-surface-dark border-border-light dark:border-border-dark text-text-muted-light dark:text-text-muted-dark'}`}>
          {disease.code}
        </span>
        <span class="text-xs font-mono text-text-muted-light dark:text-text-muted-dark uppercase tracking-wider">
          {disease.type === 'active' ? 'Active Program' : 'Pipeline Candidate'}
        </span>
      </div>

      <h1 class="text-3xl md:text-4xl font-bold mb-4">{disease.name}</h1>
      <p class="text-xl text-text-muted-light dark:text-text-muted-dark font-light border-l-2 border-primary pl-4">
        {disease.fusion} <span class="text-primary mx-2">â†’</span> {disease.mechanism}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <div class="md:col-span-2 space-y-8">
        <section>
          <h2 class="text-sm font-bold tracking-widest text-text-muted-light dark:text-text-muted-dark uppercase mb-4">Disease Summary</h2>
          <p class="leading-relaxed text-text-main-light dark:text-text-main-dark">
            {disease.description}
          </p>
        </section>

        <section>
          <h2 class="text-sm font-bold tracking-widest text-text-muted-light dark:text-text-muted-dark uppercase mb-4">Molecular Mechanism</h2>
          <div class="bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark p-6 rounded-xl">
            <p class="leading-relaxed text-sm text-text-main-light dark:text-text-main-dark">
              {disease.molecular_detail}
            </p>
          </div>
        </section>
      </div>

      <div class="space-y-6">
        <div class="bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark p-6 rounded-xl">
          <h3 class="text-xs font-bold text-text-muted-light dark:text-text-muted-dark uppercase mb-4">Target Profile</h3>
          <div class="space-y-4 text-sm">
            <div>
              <div class="text-xs text-text-muted-light dark:text-text-muted-dark mb-1">Driver</div>
              <div class="font-mono">{disease.fusion}</div>
            </div>
             <div>
              <div class="text-xs text-text-muted-light dark:text-text-muted-dark mb-1">Class</div>
              <div class="font-medium">Transcription Factor Fusion</div>
            </div>
             <div>
              <div class="text-xs text-text-muted-light dark:text-text-muted-dark mb-1">Therapeutic Strategy</div>
              <div class="font-medium">Direct Degrader (PROTAC) / Interface Inhibitor</div>
            </div>
          </div>
        </div>

        <section>
          <h3 class="text-xs font-bold tracking-widest text-text-muted-light dark:text-text-muted-dark uppercase mb-8">Active Programs</h3>
          <div class="space-y-4">
            {diseases.filter(d => d.type === 'active').map(activeDisease => (
              <a 
                href={`/programs/${activeDisease.id}`}
                class={`group flex items-center justify-between p-4 -mx-4 rounded-xl hover:bg-surface-light dark:hover:bg-surface-dark transition-colors ${activeDisease.id === disease.id ? 'bg-surface-light dark:bg-surface-dark' : ''}`}
              >
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 flex items-center justify-center">
                    <span class="material-symbols-outlined">neurology</span>
                  </div>
                  <div>
                    <div class="font-medium text-sm">{activeDisease.code}</div>
                    <div class="text-xs text-text-muted-light dark:text-text-muted-dark">Rare Oncology / {activeDisease.name}</div>
                  </div>
                </div>
                <span class="material-symbols-outlined text-text-muted-light dark:text-text-muted-dark group-hover:text-primary transition-colors transform group-hover:translate-x-1">arrow_outward</span>
              </a>
            ))}
          </div>
        </section>

        <section>
          <h3 class="text-xs font-bold tracking-widest text-text-muted-light dark:text-text-muted-dark uppercase mb-8">Pipeline Candidates</h3>
          <div class="space-y-4">
            {diseases.filter(d => d.type === 'candidate').map(candidate => (
              <a 
                href={`/programs/${candidate.id}`}
                class={`group flex items-center justify-between p-4 -mx-4 rounded-xl hover:bg-surface-light dark:hover:bg-surface-dark transition-colors ${candidate.id === disease.id ? 'bg-surface-light dark:bg-surface-dark' : ''}`}
              >
                <div class="flex items-center gap-4">
                  <div class="w-10 h-10 rounded-full bg-slate-100 dark:bg-slate-900/30 text-slate-600 dark:text-slate-400 flex items-center justify-center">
                    <span class="material-symbols-outlined">science</span>
                  </div>
                  <div>
                    <div class="font-medium text-sm">{candidate.code}</div>
                    <div class="text-xs text-text-muted-light dark:text-text-muted-dark">{candidate.name}</div>
                  </div>
                </div>
                <span class="material-symbols-outlined text-text-muted-light dark:text-text-muted-dark group-hover:text-primary transition-colors transform group-hover:translate-x-1">arrow_outward</span>
              </a>
            ))}
          </div>
        </section>
      </div>
    </div>
  </div>
</BaseLayout>
