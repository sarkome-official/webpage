---
import { Icon } from 'astro-icon/components';
---

<header class="w-full px-4 py-6 md:px-6 md:py-8 flex justify-center relative z-50">
  <nav class="bg-purple-900/90 backdrop-blur-sm rounded-full px-6 py-3 md:px-8 md:py-4 flex items-center justify-between gap-6 md:gap-12 max-w-4xl w-full shadow-lg border border-purple-700/30">
    <div class="flex items-center gap-3">
      <div class="w-8 h-8 md:w-10 md:h-10 flex items-center justify-center text-white">
        <Icon name="mdi:layers" class="w-full h-full" />
      </div>
      <a href="/" class="text-xl md:text-2xl font-bold text-white hover:text-purple-200 transition-colors">
        sarkome
      </a>
    </div>
    <ul id="desktop-menu" class="hidden md:flex items-center gap-6">
      <li>
        <a href="/science" class="text-white hover:text-purple-200 font-medium transition-colors">The Science</a>
      </li>
      <li>
        <a href="/research" class="text-white hover:text-purple-200 font-medium transition-colors">Research & Data</a>
      </li>
      <li>
        <a href="/roadmap" class="text-white hover:text-purple-200 font-medium transition-colors">Roadmap</a>
      </li>
      <li>
        <a href="/about" class="text-white hover:text-purple-200 font-medium transition-colors">About</a>
      </li>
      <li>
        <a href="/contact" class="text-white hover:text-purple-200 font-medium transition-colors">Contact</a>
      </li>
    </ul>
    <button id="mobile-menu-button" class="md:hidden text-white" aria-label="Menu" aria-expanded="false">
      <Icon name="mdi:menu" id="menu-icon" class="w-6 h-6" />
      <Icon name="mdi:close" id="close-icon" class="w-6 h-6 hidden" />
    </button>
  </nav>
  <ul id="mobile-menu" class="hidden md:hidden absolute top-full left-1/2 transform -translate-x-1/2 mt-2 bg-purple-900/95 backdrop-blur-sm rounded-2xl px-4 py-2 shadow-lg border border-purple-700/30 z-[60] min-w-[200px]">
    <li>
      <a href="/science" class="block px-4 py-3 text-white hover:bg-purple-800/50 rounded-lg font-medium transition-colors">The Science</a>
    </li>
    <li>
      <a href="/research" class="block px-4 py-3 text-white hover:bg-purple-800/50 rounded-lg font-medium transition-colors">Research & Data</a>
    </li>
    <li>
      <a href="/roadmap" class="block px-4 py-3 text-white hover:bg-purple-800/50 rounded-lg font-medium transition-colors">Roadmap</a>
    </li>
    <li>
      <a href="/about" class="block px-4 py-3 text-white hover:bg-purple-800/50 rounded-lg font-medium transition-colors">About</a>
    </li>
    <li>
      <a href="/contact" class="block px-4 py-3 text-white hover:bg-purple-800/50 rounded-lg font-medium transition-colors">Contact</a>
    </li>
  </ul>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isOpen = !mobileMenu.classList.contains('hidden');
      
      if (isOpen) {
        mobileMenu.classList.add('hidden');
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        menuButton.setAttribute('aria-expanded', 'false');
      } else {
        mobileMenu.classList.remove('hidden');
        menuIcon.classList.add('hidden');
        closeIcon.classList.remove('hidden');
        menuButton.setAttribute('aria-expanded', 'true');
      }
    });
  }
</script>

<style>
  header {
    position: relative;
  }
</style>